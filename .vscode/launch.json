{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "php",
            "request": "launch",
            "name": "Xdebug gesprender",
            "log": false,
            "port": 9003,
            "stopOnEntry": true,
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}"
            },
            "ignore": [
                "**/vendor/**"
            ]
        },
        {
            "command": "./node_modules/.bin/astro dev",
            "name": "Development server",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}